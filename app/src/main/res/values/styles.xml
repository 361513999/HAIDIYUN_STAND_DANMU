<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 通用弹窗的风格 -->
    <style name="selectorDialog" parent="@android:style/Theme.Dialog">

        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/no_color</item>
    </style>
    <!-- slide -->

    <style name="menu_pop_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/no_color</item>
        <item name="android:windowBackground">@color/no_color</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/config_pop_anim</item>
    </style>
    <!-- end of slide -->
      <style name="config_pop_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/no_color</item>
        <item name="android:windowBackground">@color/no_color</item>
        <item name="android:backgroundDimEnabled">true</item>
          <item name="android:windowContentOverlay">@null</item>
          <item name="android:windowAnimationStyle">@style/config_pop_anim</item>
    </style>
    
      
      
     <style name="config_pop_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
      <style name="toast_pop_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/no_color</item>
        <item name="android:windowBackground">@color/no_color</item>
        <item name="android:backgroundDimEnabled">true</item>

      </style>
    <style name="cardactivity" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/no_color</item>
        <item name="android:windowBackground">@color/no_color</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
        <style name="d_pop_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/no_color</item>
        <item name="android:windowBackground">@color/no_color</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
     <style name="buy_pop_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/no_color</item>
        <item name="android:windowBackground">@color/no_color</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/buy_pop_anim</item>
    </style>

    <style name="buy_pop_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_enter</item>
        <item name="android:windowExitAnimation">@anim/zoom_exit</item>
    </style>
     <style name="ThemeActivity" mce_bogus="1">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- activity动画 -->
    <style name="AnimationActivity" mce_bogus="1">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:taskOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:taskCloseExitAnimation">@anim/push_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/push_left_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/push_left_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/push_right_in</item>
        <item name="android:taskToBackExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="normal_text">
        <item name="android:shadowColor">#000011</item>
        <item name="android:shadowDx">4.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
      <style name="scrollbar_bitmap_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/home_lv_scrollbar</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/home_lv_scrollbar</item>
        <item name="android:scrollbarSize">5dp</item>
    </style>
    <!-- 图片浏览 -->
    <style name="Theme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="noAnimation" mce_bogus="1">
          <item name="android:windowIsTranslucent">true</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
</resources>
