<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flipview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <pad.com.haidiyun.www.widget.UDlayout
        android:id="@+id/ud_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pad.com.haidiyun.www.flip.FlipView
                android:id="@+id/flip_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/no_color"
                flipview:orientation="horizontal">

            </pad.com.haidiyun.www.flip.FlipView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_f_code"
                    android:layout_width="200dp"
                    android:layout_height="200dp"

                    android:src="@drawable/code_def" />
                <TextView
                    android:id="@+id/tip_view0"
                    android:textColor="@color/half_black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:id="@+id/buy_layout"
            android:layout_width="1000px"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90px"
                android:layout_height="match_parent"
                android:background="@drawable/qn" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/actionsheet_single_selector"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/h_dl_s_tab"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/h_dl_tab_no_order"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/h_dl_s_sel"
                            android:gravity="center"
                            android:text="未下单菜品"
                            android:textColor="#8c7c65"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/h_dl_tab_order"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="已下单菜品"
                            android:textColor="#453328"
                            android:textSize="18sp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/xuxian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_discount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠买单"
                            android:textColor="#EE0000"
                            android:textSize="19sp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="总价"
                            android:textColor="#EE0000"
                            android:textSize="22sp" />

                        <!--<TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/tv_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="已为你节省"
                            android:textColor="#EE0000"
                            android:textSize="22sp" />
-->
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/tv_final"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="折扣价"
                            android:textColor="#EE0000"
                            android:textSize="22sp" />

                    <TextView
                        android:id="@+id/btn_pay"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/ban"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:background="@drawable/news_item_bg"
                        android:text="去支付"/>

                    </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_discount1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/iv_code"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"

                                    android:src="@drawable/code_def" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_launcher" />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/tip_view"
                                android:textColor="@color/half_black"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />



                        </LinearLayout>


                    </FrameLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/xuxian" />

                    <ListView
                        android:id="@+id/buys"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="34dp"
                        android:layout_weight="3"
                        android:background="@color/no_color"
                        android:cacheColorHint="@color/no_color"
                        android:divider="@drawable/xuxian"
                        android:dividerHeight="4dp"
                        android:layerType="software"
                        android:listSelector="@color/no_color" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/xuxian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/pink"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/destory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/toast_loading_bg"
                            android:gravity="center"
                            android:text="清空已点"
                            android:textColor="@color/half_black"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/cancle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/toast_loading_bg"
                            android:gravity="center"
                            android:text="返回选餐"
                            android:textColor="@color/half_black"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/send"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/toast_loading_bg"
                            android:gravity="center"
                            android:text="确定点餐"
                            android:textColor="#EE0000"
                            android:textSize="19sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </pad.com.haidiyun.www.widget.UDlayout>
</LinearLayout>