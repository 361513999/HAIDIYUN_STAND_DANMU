<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_d"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tc_name"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/actionsheet_single_selector"
        android:gravity="center"
        android:textColor="@color/half_black"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="500dp"
        android:background="@drawable/news_item_bg"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ListView
                android:id="@+id/suit_item"
                style="@style/scrollbar_bitmap_style"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@color/no_color"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:fadingEdge="none"
                android:footerDividersEnabled="false"
                android:listSelector="#00000000" >
            </ListView>
            <GridView
                android:id="@+id/suit_views"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:columnWidth="180dp"
                android:horizontalSpacing="20dp"
                android:listSelector="#00000000"
                android:numColumns="3"
                android:stretchMode="none" >
            </GridView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tc_pop_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/toast_loading_bg"
                android:gravity="center"
                android:text="取消选择"
                android:textColor="@color/half_black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tc_pop_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/toast_loading_bg"
                android:gravity="center"
                android:text="确定选择"
                android:textColor="#EE0000"
                android:textSize="19sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>