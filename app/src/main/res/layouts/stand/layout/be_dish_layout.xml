<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_d"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:background="@drawable/be_dish_bg"
        android:orientation="vertical"
        android:padding="50dp"
        android:tag="skin:be_dish_bg:background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/eating"
            android:textColor="@color/half_black"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/item0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/news_item_bg"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/red"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/item1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/news_item_bg"
                android:gravity="center"
                android:text="@string/adddish"
                android:textColor="@color/menu_item"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>