<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menu_view"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/toast_loading_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <TextView
            android:id="@+id/menu_item0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="4"
            android:gravity="center"
             android:textColor="@color/menu_item"
            android:text="目录"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/seperator_thin" />

        <TextView
             android:id="@+id/menu_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             android:textColor="@color/menu_item"
            android:ems="4"
            android:gravity="center"
            android:text="搜索"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/buyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom|center_horizontal"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:paddingBottom="15dp"
            android:background="@drawable/buy_icon" />

        <TextView
            android:id="@+id/tipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_semi_transparent"
            android:background="@drawable/shape_common_white"
            android:padding="4dp"
            android:textSize="20sp"
            android:text="已选菜品" />
    </LinearLayout>

</RelativeLayout>