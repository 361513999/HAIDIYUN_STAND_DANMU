<?xml version="1.0" encoding="utf-8"?>
<!-- 主页菜单的selector之一 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点中时的 -->
    <item android:drawable="@drawable/ring_item3_p" android:state_pressed="true"/>
    <!-- 有焦点时的 -->
    <item android:drawable="@drawable/ring_item3_p" android:state_focused="true"/>
    <!-- 选中时字体 -->
    <item android:drawable="@drawable/ring_item3_p" android:state_selected="true"/>
    <!-- 默认的 -->
    <item android:drawable="@drawable/ring_item3"/>

</selector>